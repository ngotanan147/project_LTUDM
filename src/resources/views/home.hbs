<!-- Món ăn nổi bật - Slider -->
<div class="pt-5 " style="background-image: url('img/background.png');">
    <div class="icon_cupcake text-center">
        <img src="img/cupcake.png" alt="" style="max-width: 100%;height: auto;">
    </div>
    <div class="monannoibat_title text-center">
        <h2 style="display:inline-block;">
            <a href="Product">Món ăn nổi bật</a>
        </h2>
    </div>
    <!-- Món ăn nổi bật - Slider -->
    <div class="slider">
        <div class="slider-sub">
            <div class="container-fluid p-5">
                <div class="swiper-container">
                    <div id="noibac" class="swiper-wrapper" style="height:auto">
                        {{#each product}}
                        <div class="swiper-slide" style="max-height: 480px;">
                            <div class="image">
                                <a class="image_product" href="">
                                    <img src="img/{{this.image}}" alt="">
                                </a>
                            </div>
                            <div class="info">
                                <div class="infoLeft">
                                    <h3 class=title>
                                        <a href="">
                                            {{this.name}}
                                        </a>
                                    </h3>
                                    <div class="box_price sdsdsds">
                                        <span class="special_price">
                                            <span class="price product-price">{{this.price}}</span>
                                        </span>
                                    </div>
                                </div>
                                <div class="infoRight">
                                    <a class="addtocart" id="product" href="">
                                        <button>Thêm vào giỏ</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                        {{/each}}

                    </div>
                    <!-- Add Pagination -->
                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </div>
    </div>
</div>