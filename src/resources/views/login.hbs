<div class="login">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 mt-4 tieude">
                <h3>Đăng nhập tài khoản</h3>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-xs-12 col-sm-12">
                <div class="form">
                    <form action="/login" method="post" id="form-login">
                        
                        <div class="form-group">
                            <label>Nếu bạn đã có tài khoản, đăng nhập ở đây</label><br>
                            <label id="login-error" style="color: red"></label><br>
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" placeholder="Username" name="email">
                        </div>
                        <div class="form-group">
                            <label for="pwd">Mật khẩu:</label>
                            <input type="password" class="form-control" id="password" placeholder="Password"
                                name="password">
                        </div>
                        <button type="submit" class="btn btn-primary mb-3" id="dangnhap">Đăng Nhập</button>
                    </form>

                    <div class="register">
                        <label for="">Bạn chưa có tài khoản, hãy Đăng ký <a href="/register" style="color:#ef7147;">tại
                                đây</a> </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>